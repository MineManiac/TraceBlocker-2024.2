{
  "manifest_version": 2,
  "name": "Bloqueio de Rastreadores",
  "version": "1.0",
  "description": "Plugin para bloquear rastreadores e proteger a privacidade.",
  "permissions": ["webRequest", "webRequestBlocking", "<all_urls>", "storage"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "48": "icon.png"
  }
}
